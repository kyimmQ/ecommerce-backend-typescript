{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version: 'ES5', 'ES6', 'ES2016', etc.
    "module": "commonjs", // Specify module code generation: 'commonjs', 'amd', 'es2015', etc.
    "strict": true, // Enable all strict type-checking options.
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects.
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts).
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "outDir": "./dist", // Redirect output structure to the directory.
    "rootDir": ".", // Specify the root directory of input files.
    "resolveJsonModule": true, // Include modules imported with '.json' extension.
    "typeRoots": ["./node_modules/@types"], // List of folders to include type definitions from.
    "types": ["express"], // Specify 'express' to prioritize its types
    "lib": ["es6", "DOM"] // Specify library files to be included in the compilation.
  },
  "include": [
    "server.ts",
    "src/**/*.ts" // Specify an array of filenames or patterns to include in the program.
  ],
  "exclude": [
    "node_modules", // Specify an array of filenames or patterns to exclude from the program.
    "dist" // Exclude the output directory from compilation.
  ]
}
